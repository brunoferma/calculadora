
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>


    <style name="btnCalc">
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textSize">@dimen/text_bottom</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">@dimen/layout_height</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>

    </style>
    </resources>